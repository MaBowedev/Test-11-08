<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="output.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body class="bg-slate-400">



    <section >


        <div>
            <header class="bg-red-600 p-2 w-full flex justify-center">
                <h1 class="text-2xl font-extrabold mb-5">Abbigliamento online</h1>
            </header>



            <div class="flex flex-wrap w-full gap-6  items-center justify-center" id="container">


                <% products.forEach(p=> {%>
                    <div class="mt-5 p-1 border  bg-red-300 border-black rounded-md ">
                        <p>
                            <%= p.id %>
                        </p>
                        <p>
                            <%= p.name %>
                        </p>
                        <p>
                            <%= p.prezzo %>$
                        </p>
                        <p>
                            <%= p.description %>
                        </p>
                        <img src=<%=p.image %> alt="">
                        <form id="form" action="/product" method="POST">
                            <button class="border mt-2 bg-slate-300 border-black rounded-md">details</button>
                        </form>
                        




                    </div>

                    <% }) %>
            </div>
            <div class=" mt-10 flex  justify-center">
                <form id="form" action="/category" method="POST">
                    <div class="flex flex-col">
                        <label>Scegli categoria</label>
                        <select name="scegli" id="">
                            <option value="3">Scarpe</option>
                            <option value="2">Abbigliamento</option>
                            <option value="1">Intimo</option>
                            <option value="">Tutto</option>
                        </select>
                        <button class="bg-blue-300 p-1 mt-2" id="btn">Go</button>
                </form>
            </div>


        </div>
        </div>

    </section>

    <script>




    </script>

</body>

</html>